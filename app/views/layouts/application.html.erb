<!DOCTYPE html>
<html>
  <head>
    <title>RailsCapstone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav id="navigation" class="navbar navbar-expand-lg navbar-light row">      
      <div class="col-3 ml-2 mt-2">
        <%= link_to 'EllaMexicana', root_path, class: "logo" %>
      </div>
      
      <div class="collapse navbar-collapse d-flex justify-content-center col-6 mt-2" >
        <div class="navbar-nav">
          <%= categories_nav_links %>
        </div>
      </div>

      <div class="col-3 mr-2 mt-2 d-flex justify-content-end">
       <%= session_links %>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
